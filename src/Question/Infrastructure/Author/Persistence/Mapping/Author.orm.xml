<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity
            name="App\Question\Domain\Author\Author"
            repository-class="App\Question\Infrastructure\Author\Persistence\AuthorRepository"
            table="authors"
    >
        <id name="id" type="author_id" />
        <field name="name" type="string" length="50" unique="true" />
        <field name="userId" type="user_id" />
    </entity>
</doctrine-mapping>