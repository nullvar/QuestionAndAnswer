<?xml version="1.0" encoding="UTF-8" ?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
        http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
    <entity
            name="App\Core\Domain\User\User"
            repository-class="App\Core\Infrastructure\User\Persistence\UserRepository"
            table="users"
    >
        <id name="id" type="user_id" />
        <field name="username" type="string" length="100" unique="true" />
        <field name="password" type="string" scale="100" />
    </entity>
</doctrine-mapping>